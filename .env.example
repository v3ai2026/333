# ===================================================================
# MagicAI v9.9 Environment Configuration
# ===================================================================
# Copy this file to .env and update with your values for deployment

# ===================================================================
# DEPLOYMENT ENVIRONMENT
# ===================================================================
APP_ENV=production
APP_DEBUG=false
FLASK_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=magicai
DB_USERNAME=magicai
DB_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION

MYSQL_ROOT_PASSWORD=CHANGE_ROOT_PASSWORD_IN_PRODUCTION
MYSQL_DATABASE=magicai
MYSQL_USER=magicai

# ===================================================================
# REDIS CONFIGURATION (Cache & Queue)
# ===================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION

CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
BROADCAST_DRIVER=redis

# ===================================================================
# GCP & VERTEX AI CONFIGURATION
# ===================================================================
GCP_PROJECT_ID=your-actual-gcp-project-id
GCP_REGION=us-central1

GOOGLE_APPLICATION_CREDENTIALS=/app/credentials.json
VERTEX_AI_ENABLED=true
VERTEX_AI_MODEL=gemini-pro

VERTEX_AI_BACKEND_URL=http://python-backend:8080

# ===================================================================
# AWS S3 CONFIGURATION (For file storage)
# ===================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_URLS=false

# ===================================================================
# PAYMENT GATEWAY CONFIGURATIONS
# ===================================================================
# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal
PAYPAL_MODE=live
PAYPAL_SANDBOX_API_USERNAME=
PAYPAL_SANDBOX_API_PASSWORD=
PAYPAL_SANDBOX_API_SIGNATURE=

# Razorpay
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# ===================================================================
# EXTERNAL SERVICES
# ===================================================================
# OpenAI
OPENAI_API_KEY=

# ElevenLabs (Text-to-Speech)
ELEVENLABS_API_KEY=

# Google Cloud
GOOGLE_CLOUD_API_KEY=
GOOGLE_TRANSLATE_API_KEY=

# ===================================================================
# SOCIAL LOGIN (OAuth)
# ===================================================================
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===================================================================
# MAIL CONFIGURATION
# ===================================================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@magicai.test
MAIL_FROM_NAME="MagicAI"

# ===================================================================
# APPLICATION SETTINGS
# ===================================================================
APP_URL=https://yourdomain.com
APP_NAME=MagicAI
TIMEZONE=UTC

SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# ===================================================================
# LOGGING
# ===================================================================
LOG_CHANNEL=stack
LOG_LEVEL=info

# ===================================================================
# DOCKER PORTS (for local development)
# ===================================================================
WEB_PORT=8000
BACKEND_PORT=8080
DB_PORT=3306
REDIS_PORT=6379

# ===================================================================
# SECURITY
# ===================================================================
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,yourdomain.com
SESSION_DOMAIN=.yourdomain.com
